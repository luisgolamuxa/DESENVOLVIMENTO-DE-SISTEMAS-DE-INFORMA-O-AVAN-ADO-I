@model MinhaApp.Application.DTOs.ProdutoDto
@{
    ViewData["Title"] = "Editar Produto";
}

<h2>Editar Produto</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />
    <div>
        <label>Nome</label>
        <input asp-for="Nome" />
    </div>
    <div>
        <label>Categoria</label>
        <select asp-for="CategoriaId">
            <option value="">-- selecione --</option>
@{
    var categorias = ViewBag.Categorias as IEnumerable<MinhaApp.Application.DTOs.CategoriaDto> ?? Enumerable.Empty<MinhaApp.Application.DTOs.CategoriaDto>();
}
@foreach(var c in categorias)
{
    <option value="@c.Id" @(c.Id == Model.CategoriaId ? "selected" : "")>@c.Nome</option>
}
        </select>
    </div>
    <button type="submit">Salvar</button>
</form>
